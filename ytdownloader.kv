<MyLayout>:
    canvas.before:
        Color:
            rgba: (0.19, 0.19, 0.19, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Label:
            text: "YouTube Downloader"
            font_size: 32
            bold: True
            underline: True
            background_color: (0.67, 0.3, 0.3, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos


        Label:
            id: label
            text: "Gib unten deinen Link ein"
            font_size: 20


        TextInput:
            id: url
            multiline: True
            size_hint: 0.9, 0.9
            pos_hint: {"center_x": 0.5}


        Button:
            id: download
            text: "Download"
            font_size: 32
            background_normal: ""
            background_color: (0.2, 0.54, 0.2, 1)
            size_hint: 0.7, 0.7
            pos_hint: {"center_x": 0.5}
            #on_press: root.press()


        Label:
            text: "(Das Video wird in den Downloads Ordner gespeichert)"
            font_size: 15
